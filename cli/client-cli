#!/usr/local/bin/python

import click
import tabulate as tabulate
from colorama import Style, Back, Fore, init as click_init


click_init(autoreset=True)


@click.version_option("1.0.0", prog_name="Client CLI")
@click.group()
def cli():
    pass


@click.command()
def markets():
    # get markets from database
    click.echo(tabulate.tabulate([], headers=["coin_id", "name"], tablefmt='outline', stralign="left", numalign="center"))

@click.command()
