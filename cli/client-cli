@click.option('--price', '-p', type=float, prompt='Pricecd ', help='Enter user from db.users.id')
@click.option('--side', '-s', type=int, prompt='Order Side', help='BUY=1, SELL=2')
def order(userid: int, interval: str, period: int, sleep: str):
    click.echo(Back.RED + Fore.WHITE + "Pagination fucked up.")
    print(Back.GREEN + Fore.WHITE + "Updated Successfully")
    print(Back.RED + Fore.WHITE + "HI")

cli.add_command(markets)
cli.add_command(order)

if __name__ == "__main__":
